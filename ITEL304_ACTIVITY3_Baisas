from flask import Flask,request

app = Flask(__name__)

@app.route('/')
def home():
    return """<html>
                <body>
                    <h2>Activity 3</h2>
                    <form action="/NameChar">
                        <h4>What's your name?</h4> <input type='text' name='username'><br><br>
                        <h4>What's your characteristic?</h4> <input type='text' name='char'><br><br>
                        <input type='submit' value='SUBMIT'>
                    </form>    
                </body>
                </html>"""

@app.route('/NameChar')
def NameChar():
    username = request.args.get('username')
    char = request.args['char'] 
    if char == '':
        msg = 'You did not put your Characteristic!'
    else:
        msg =  'My Characteristic is'' '+char+'.'
    return """
            <html>
                <body>
            <h2>Activity 3</h2>
            <h4>My name is {0}.</h4>
            <h4> {1}</h4>
                </body>
            </html>
            """.format(username, msg)

app.run(host="localhost", debug=True)
